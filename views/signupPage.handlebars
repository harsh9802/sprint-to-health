            <!-- Weight -->
            <div class="form-group">
                <label for="weight">Weight (Kg)</label>
                <input type="text" id="weight" name="weight" required placeholder="Enter your weight in Kg" />
            </div>

            <!-- Height -->
            <div class="form-group">
                <label for="height">Height (Cm)</label>
                <input type="text" id="height" name="height" required placeholder="Enter your height in Cm" />
            </div>

            <!-- Submit Button -->
            <button type="submit">Sign Up</button>
        </form>

        <!-- Login Link -->
        <div class="login-link">
            Already have an account? <a href="/login">Log In</a>
        </div>
